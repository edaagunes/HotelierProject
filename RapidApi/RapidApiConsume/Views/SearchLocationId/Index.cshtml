@model List<BookingApiLocationSearchViewModel>
@{
	Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
	<br /><br />
	@using (Html.BeginForm("Index", "SearchLocationId", FormMethod.Post))
	{
		<label>Şehir Adını Giriniz</label>
		<input class="form-control" type="text" name="cityName"/>
		<br />
		<button class="btn btn-outline-primary">Şehir İçin Id Bulun</button>
	}
	<table class="table table-bordered">
		<tr>
			<th>Lokasyon Id Bilgisi</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.dest_id</td>
			</tr>
		}
	</table>
	<br />
	<a href="/BookingByCity/Index" class="btn btn-outline-secondary" >Yeni Otel Rezervasyon Bilgisi</a>
</div>

@model CreateRoomDto
@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <label>Oda Numarası</label>
    <input type="text" class="form-control" asp-for="RoomNumber" />
    <br />
    <label>Oda Başlığı</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Oda Fiyatı</label>
    <input type="text" class="form-control" asp-for="Price" />
    <br />
    <label>Yatak Sayısı</label>
    <input type="text" class="form-control" asp-for="BedCount" />
    <br />
    <label>Banyo Sayısı</label>
    <input type="text" class="form-control" asp-for="BathCount" />
    <br />
    <label>Oda Görseli</label>
    <input type="text" class="form-control" asp-for="CoverImage" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <button type="submit" class="btn btn-outline-primary">Odayı Ekle</button>
</form>

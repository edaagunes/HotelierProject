@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="StaffId"/>
    <label>Personel Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Personel Unvan</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Sosyal Medya 1</label>
    <input type="text" class="form-control" asp-for="SocialMedia1" />
    <br />
    <label>Sosyal Medya 2</label>
    <input type="text" class="form-control" asp-for="SocialMedia2" />
    <br />
    <label>Sosyal Medya 3</label>
    <input type="text" class="form-control" asp-for="SocialMedia3" />
    <br />
    <button type="submit" class="btn btn-outline-success">Personeli Güncelle</button>
</form>



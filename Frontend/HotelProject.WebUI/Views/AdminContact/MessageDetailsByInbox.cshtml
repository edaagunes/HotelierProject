@model InboxContactDto
@{
    ViewData["Title"] = "MessageDetailsByInbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
	<a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj</a>

	@await Html.PartialAsync("SideBarAdminContactPartial.cshtml")

	@await Html.PartialAsync("SideBarAdminContactCategoryPartial.cshtml")

</div>
<div class="email-right-box">
	<div role="toolbar" class="toolbar">
		<div class="btn-group">
			<button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark" type="button">
				Gönderilen Mesajlar <span class="caret m-l-5"></span>
			</button>

		</div>
	</div>

	<div class="read-content">
		<div class="media pt-5">
			<img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
			<div class="media-body">
				<h5 class="m-b-3">@Model.Name</h5>
				<p class="m-b-2">@Model.Date.ToString("dd-MMM-yyyy")</p>
			</div>

		</div>
		<hr>
		<div class="media mb-4 mt-1">
			<div class="media-body">
				<span class="float-right">@Model.Date.ToString("hh:mm tt")</span>
				<h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Kime: @Model.Mail</small>
			</div>
		</div>
		<p>@Model.Message</p>
		<hr>
	</div>
</div>


